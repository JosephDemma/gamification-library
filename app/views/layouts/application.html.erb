          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Level Badger</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to 'Games', games_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <!-- VIEWS CONTENT -->
