<h1>Friendships</h1>

<table class="table table-striped">
  <tr>
    <th>User</th>
    <th>Friend</th>
    <th>Manage</th>
  </tr>

<% @friendships.each do |friendship| %>
  <tr>
    <td><%= User.find(friendship.user_id).username %></td>
    <td><%= User.find(friendship.friend_id).username %></td>
    <td>
      <%= link_to 'Show', friendship %> | 
      <%= link_to 'Edit', edit_friendship_path(friendship) %> | 
      <%= link_to 'Destroy', friendship, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Friendship', new_friendship_path %>
