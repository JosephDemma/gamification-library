<%= form_for([@game, @level], html: {class: 'form-horizontal'}) do |f| %>
  <% if @level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@level.errors.count, "error") %> prohibited this level from being saved:</h2>

      <ul>
      <% @level.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="control-group">
      <%= f.label :xp_to_next_level, class: 'control-label' %>
      <div class="controls">
        <%= f.number_field :xp_to_next_level %>
      </div>
    </div>
	
	
    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>
