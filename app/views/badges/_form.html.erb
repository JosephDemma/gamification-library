<%= form_for(@badge, html: {class: 'form-horizontal'}) do |f| %>
  <% if @badge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@badge.errors.count, "error") %> prohibited this badge from being saved:</h2>

      <ul>
      <% @badge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="control-group">
      <%= f.label :badge_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :badge_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :badge_image, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :badge_image %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :badge_info, class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :badge_info %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>
