<div class="page-header">
  <h1>Users <small>Create and edit your game's users.</small></h1>
</div>

<p><i class="icon-plus-sign"></i> <%= link_to 'New User', new_game_user_path(@game) %></p>

<table class="table table-striped">
  <tr>
    <th>Username</th>
    <th>Level</th>
    <th>XP</th>
    <th>Manage</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><i class="icon-user"></i> <%= user.username %></td>
    <td><%= user.level.id %></td>
    <td><%= user.xp %></td>
    <td>
        <%= link_to 'View', game_user_path(@game, user) %> |
        <%= link_to 'Edit', edit_game_user_path(@game, user) %> |
        <%= link_to 'Delete', [@game, user], confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>