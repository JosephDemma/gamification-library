<h1>Emails</h1>

<table class="table table-striped">
  <tr>
    <th>User</th>
    <th>Email</th>
    <th>Manage</th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= User.find(email.user_id).username %></td>
    <td><%= email.email %></td>
    <td>
      <%= link_to 'Show', email %> | 
      <%= link_to 'Edit', edit_email_path(email) %> | 
      <%= link_to 'Destroy', email, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'New Email', new_email_path %>
